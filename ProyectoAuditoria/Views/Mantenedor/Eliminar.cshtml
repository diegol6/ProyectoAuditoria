@model ActivoModel

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    Eliminar Activo
  </div>
  <div class="card-body">
    
      <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">
           
            <input asp-for="IdActivo" type="hidden" class="form-control" >
            
            <div class="alert alert-danger" role="alert">
                  ¿Eliminar Activo? : @Html.DisplayTextFor(m => m.Nombre) ?
                </div>

          <button type="submit" class="btn btn-danger">Eliminar</button>
          <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning" >Volver a la Lista</a>
       </form>

  </div>
</div>


