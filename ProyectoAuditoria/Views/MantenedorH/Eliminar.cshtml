@model HallazgoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Eliminar Hallazgo
  </div>
  <div class="card-body">
    
      <form asp-action="Eliminar" asp-controller="MantenedorH" method="post">
           
            <input asp-for="IdHallazgo" type="hidden" class="form-control" >
            
            <div class="alert alert-danger" role="alert">
                  ¿Eliminar Hallazgo? : @Html.DisplayTextFor(m => m.IdHallazgo) ?
                </div>

          <button type="submit" class="btn btn-danger">Eliminar</button>
          <a asp-action="Listar" asp-controller="MantenedorH" class="btn btn-warning" >Volver a la Lista</a>
       </form>

  </div>
</div>

